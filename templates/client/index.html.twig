{% extends 'base.html.twig' %}

{% block title %}Client index
{% endblock %}

{% block body %}
{{ include('_search.html.twig') }}

	<h1>Client index</h1>
<div class="table-responsive-sm">
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Prenom</th>
				<th>ville</th>
				<th>mail</th>
				<th>Phone</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for client in clients %}
				<tr>
					<td>{{ client.id }}</td>
					<td>{{ client.nom }}</td>
					<td>{{ client.prenom }}</td>
					<td>{{ client.ville }}</td>
					<td>
						<a href="mail:{{ client.mail }}">{{ client.mail }}</td>
					</td>
					<td>
						<a href="tel:{{ client.phone }}">{{ client.phone }}</a>
					</td>
					<td>
						<a href="{{ path('app_client_show', {'id': client.id}) }}">
							<i class="bi bi-pencil"></i>
							show
						</a>
						<a href="{{ path('app_client_edit', {'id': client.id}) }}">
							{# <i class="bi bi-box-arrow-in-right"></i> #}
							<i class="bi bi-wrench"></i>
							edit
							{# <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> #}
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>

	<a href="{{ path('app_client_new') }}" class="btn btn-primary">
		<i class="bi bi-person-plus-fill"></i>
		Create new</a>
{% endblock %}
